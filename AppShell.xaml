<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DistanceAlarm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DistanceAlarm"
    xmlns:views="clr-namespace:DistanceAlarm.Views"
    Title="Distance Alarm">

    <TabBar>
        <ShellContent
            Title="Main"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
