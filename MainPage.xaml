<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DistanceAlarm.ViewModels"
             xmlns:models="clr-namespace:DistanceAlarm.Models"
             x:Class="DistanceAlarm.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Distance Alarm">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="16">

            <!-- Status Card -->
            <Frame BackgroundColor="LightGray" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connection Status" 
                           FontSize="18"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding StatusMessage}" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{Binding ConnectionState.ConnectedDevice.DisplayName, StringFormat='Connected to: {0}'}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           IsVisible="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Control Buttons Card -->
            <Frame BackgroundColor="LightGray" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Controls" 
                           FontSize="18" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="12" RowSpacing="12">
                        
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Start Scanning" 
                                Command="{Binding StartScanCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InvertedBoolConverter}}" />
                        
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Stop Scanning" 
                                Command="{Binding StopScanCommand}"
                                IsEnabled="{Binding IsScanning}" />
                        
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Disconnect" 
                                Command="{Binding DisconnectCommand}"
                                IsEnabled="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                        
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Test Alarm" 
                                Command="{Binding TestAlarmCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Discovered Devices Card -->
            <Frame BackgroundColor="LightGray" Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Discovered Devices" 
                           FontSize="18" />
                    
                    <ActivityIndicator IsRunning="{Binding IsScanning}" 
                                     HorizontalOptions="Center"
                                     IsVisible="{Binding IsScanning}" />
                    
                    <CollectionView ItemsSource="{Binding DiscoveredDevices}" 
                                  MaximumHeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BleDevice">
                                <Frame BackgroundColor="White" 
                                       Padding="16"
                                       Margin="0,4">
                                    <Grid RowDefinitions="Auto,Auto" 
                                          ColumnDefinitions="*,Auto">
                                        
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DisplayName}" 
                                               FontSize="16" />
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding SignalStrength}" 
                                               FontSize="12"
                                               TextColor="Gray" />
                                        
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                Text="Connect"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ConnectToDeviceCommand}"
                                                CommandParameter="{Binding .}"
                                                VerticalOptions="Center"
                                                Padding="16,8" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>