<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DistanceAlarm.ViewModels"
             xmlns:models="clr-namespace:DistanceAlarm.Models"
             x:Class="DistanceAlarm.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Distance Alarm">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="16">

            <!-- Status Card -->
            <Border Style="{StaticResource MaterialElevatedCard}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connection Status" 
                           Style="{StaticResource TitleMedium}"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding StatusMessage}" 
                           Style="{StaticResource BodyLarge}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{Binding ConnectionState.ConnectedDevice.DisplayName, StringFormat='Connected to: {0}'}"
                           Style="{StaticResource BodyMedium}"
                           HorizontalOptions="Center"
                           IsVisible="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                </VerticalStackLayout>
            </Border>

            <!-- Control Buttons Card -->
            <Border Style="{StaticResource MaterialCard}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Controls" 
                           Style="{StaticResource TitleMedium}" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="12" RowSpacing="12">
                        
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Start Scanning" 
                                Command="{Binding StartScanCommand}"
                                IsEnabled="{Binding IsScanning, Converter={StaticResource InvertedBoolConverter}}" />
                        
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Stop Scanning" 
                                Command="{Binding StopScanCommand}"
                                IsEnabled="{Binding IsScanning}"
                                Style="{StaticResource SecondaryButton}" />
                        
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Disconnect" 
                                Command="{Binding DisconnectCommand}"
                                IsEnabled="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}"
                                Style="{StaticResource OutlinedButton}" />
                        
                        <Button Grid.Row="1" Grid.Column="1"
                                Text="Test Alarm" 
                                Command="{Binding TestAlarmCommand}"
                                Style="{StaticResource TextButton}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Discovered Devices Card -->
            <Border Style="{StaticResource MaterialCard}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Discovered Devices" 
                           Style="{StaticResource TitleMedium}" />
                    
                    <ActivityIndicator IsRunning="{Binding IsScanning}" 
                                     HorizontalOptions="Center"
                                     IsVisible="{Binding IsScanning}" />
                    
                    <CollectionView ItemsSource="{Binding DiscoveredDevices}" 
                                  MaximumHeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BleDevice">
                                <Border Style="{StaticResource MaterialCard}" 
                                        Margin="0,4">
                                    <Grid Padding="16" 
                                          RowDefinitions="Auto,Auto" 
                                          ColumnDefinitions="*,Auto">
                                        
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DisplayName}" 
                                               Style="{StaticResource BodyLarge}" />
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding SignalStrength}" 
                                               Style="{StaticResource LabelMedium}"
                                               TextColor="{AppThemeBinding Light={StaticResource OnSurfaceVariant}, Dark={StaticResource OnSurfaceVariantDark}}" />
                                        
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                Text="Connect"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ConnectToDeviceCommand}"
                                                CommandParameter="{Binding .}"
                                                VerticalOptions="Center"
                                                Padding="16,8" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
