<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DistanceAlarm.ViewModels"
             xmlns:models="clr-namespace:DistanceAlarm.Models"
             x:Class="DistanceAlarm.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Distance Alarm">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="16">

            <!-- Status Section -->
            <Frame Style="{StaticResource MaterialCardStyle}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connection Status" 
                           Style="{StaticResource TitleLarge}"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding StatusMessage}" 
                           Style="{StaticResource BodyLarge}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{Binding ConnectionState.ConnectedDevice.DisplayName, StringFormat='Connected to: {0}'}"
                           Style="{StaticResource BodyMedium}"
                           HorizontalOptions="Center"
                           IsVisible="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Control Buttons -->
            <VerticalStackLayout Spacing="12">
                <Button Text="Start Scanning" 
                        Command="{Binding StartScanCommand}"
                        IsEnabled="{Binding IsScanning, Converter={StaticResource InvertedBoolConverter}}" />
                
                <Button Text="Stop Scanning" 
                        Command="{Binding StopScanCommand}"
                        IsEnabled="{Binding IsScanning}"
                        Style="{StaticResource TonalButtonStyle}" />
                
                <Button Text="Disconnect" 
                        Command="{Binding DisconnectCommand}"
                        IsEnabled="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}"
                        Style="{StaticResource OutlinedButtonStyle}" />
                
                <Button Text="Test Alarm" 
                        Command="{Binding TestAlarmCommand}"
                        Style="{StaticResource TonalButtonStyle}" />
            </VerticalStackLayout>

            <!-- Discovered Devices -->
            <Frame Style="{StaticResource MaterialCardStyle}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Discovered Devices" 
                           Style="{StaticResource TitleLarge}" />
                    
                    <ActivityIndicator IsRunning="{Binding IsScanning}" 
                                     HorizontalOptions="Center"
                                     IsVisible="{Binding IsScanning}" />
                    
                    <CollectionView ItemsSource="{Binding DiscoveredDevices}" 
                                  MaximumHeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BleDevice">
                                <Frame Style="{StaticResource MaterialCardOutlinedStyle}" Margin="0,4">
                                    <Grid Padding="8" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DisplayName}" 
                                               Style="{StaticResource TitleMedium}" />
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding SignalStrength}" 
                                               Style="{StaticResource BodySmall}" />
                                        
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                Text="Connect"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ConnectToDeviceCommand}"
                                                CommandParameter="{Binding .}"
                                                Style="{StaticResource TonalButtonStyle}"
                                                VerticalOptions="Center"
                                                Padding="16,8" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
