<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:DistanceAlarm.ViewModels"
             xmlns:models="clr-namespace:DistanceAlarm.Models"
             x:Class="DistanceAlarm.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Distance Alarm"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="16">

            <!-- Status Card -->
            <Border BackgroundColor="#2D2D30" 
                    Stroke="#3E3E42" 
                    StrokeThickness="1"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connection Status" 
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding StatusMessage}" 
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{Binding ConnectionState.ConnectedDevice.DisplayName, StringFormat='Connected to: {0}'}"
                           FontSize="14"
                           TextColor="LightGray"
                           HorizontalOptions="Center"
                           IsVisible="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                </VerticalStackLayout>
            </Border>

            <!-- Control Buttons Card -->
            <Border BackgroundColor="#2D2D30" 
                    Stroke="#3E3E42" 
                    StrokeThickness="1"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Controls" 
                           FontSize="18" 
                           TextColor="White" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="12" RowSpacing="12">
                        
                        <Button Grid.Row="0" Grid.Column="0"
                                Text="Refresh Connected" 
                                Command="{Binding LoadConnectedDevicesCommand}" />
                        
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Disconnect" 
                                Command="{Binding DisconnectCommand}"
                                IsEnabled="{Binding ConnectionState.ConnectedDevice, Converter={StaticResource IsNotNullConverter}}" />
                        
                        <Button Grid.Row="1" Grid.Column="0"
                                Text="Test Alarm" 
                                Command="{Binding TestAlarmCommand}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Discovered Devices Card -->
            <Border BackgroundColor="#2D2D30" 
                    Stroke="#3E3E42" 
                    StrokeThickness="1"
                    Padding="16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Connected Devices" 
                           FontSize="18" 
                           TextColor="White" />
                    
                    <CollectionView ItemsSource="{Binding DiscoveredDevices}" 
                                  MaximumHeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BleDevice">
                                <Border BackgroundColor="#3C3C3C" 
                                        Stroke="#4A4A4A"
                                        StrokeThickness="1"
                                        Padding="16"
                                        Margin="0,4">
                                    <Grid RowDefinitions="Auto,Auto" 
                                          ColumnDefinitions="*,Auto">
                                        
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DisplayName}" 
                                               FontSize="16" 
                                               TextColor="White" />
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding SignalStrength}" 
                                               FontSize="12"
                                               TextColor="LightGray" />
                                        
                                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                Text="Connect"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=ConnectToDeviceCommand}"
                                                CommandParameter="{Binding .}"
                                                VerticalOptions="Center"
                                                Padding="16,8" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>